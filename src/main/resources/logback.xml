<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.selventa" level="DEBUG" />
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>